<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO">  
<!-- 이 네임스페이스(UserDAO)와 DAO에서 호출하는 이름(UserDAO.insertUser)이 일치해야 해! -->

	<!-- UserDTO 와 DB테이블을 매핑 -->
	<resultMap id="userResult" type="user">
		<id property="id"         column="ID" />
		<result property="password"   column="PASSWORD" />
		<result property="name"  column="NAME" />
		<result property="role" column="ROLE" />
	</resultMap>

    <!-- 회원 등록 (INSERT) -->
	<insert id="insertUser" parameterType="user">
	    <![CDATA[
	        INSERT INTO USERS(ID, PASSWORD, NAME, ROLE)
	        VALUES (#{id}, #{password}, #{name}, #{role})
	   	]]>
	</insert>
	
	<!-- 회원 상세 조회 (SELECT ONE) -->
	<select id="getUser"  resultMap="userResult" parameterType="user">
		<![CDATA[ 
            SELECT ID, PASSWORD, NAME, ROLE FROM USERS 
            WHERE ID = #{id} AND PASSWORD = #{password} 
        ]]>
	</select>
	
	<!-- 회원 목록 전체 조회 (SELECT LIST) -->
	<select id="getUserList"  resultMap="userResult" parameterType="user">
		<![CDATA[ 
            SELECT ID, PASSWORD, NAME, ROLE FROM USERS ORDER BY ID DESC 
        ]]>
	</select>
</mapper>
